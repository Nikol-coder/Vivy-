/* page/video/video.wxss */
/* 头部搜索框 */
.header {
    display: flex;
    height: 60rpx;
    padding: 10rpx;
}
.header image{
    height: 100%;
    width: 60rpx;
}
.header .search{
    flex: 1;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
    margin: 0 20rpx;
    border: 1px solid #eee;
}
/*nav 导航*/
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}
.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 60rpx;
}
.navScroll .navItem .active{
    border-bottom: 1px solid red;
}
/* 视频区域 */
.contentScroll{
    margin-top: 12rpx;
    height: 1180rpx;
    display: flex;
    flex-direction: column;
}
.contentScroll .scrollItem{
    padding: 0 3%;
}
.contentScroll .scrollItem .myVideo{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}
.content{
    font-size: 24rpx;
    padding: 6rpx;
}
/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
}

.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}

.comments_praised .btn:after {
    border: none;
}

.comments_praised .item {
    margin-left: 50rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}
